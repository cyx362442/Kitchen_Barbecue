<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.duowei.kitchen_barbecue.app.SettingActivity">
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <View
                android:id="@+id/view1"
                android:layout_width="5dp"
                android:layout_height="match_parent"
                android:background="@color/colorBlue"></View>
            <TextView
                android:id="@+id/tv_basic"
                style="@style/TextView_Setting"
                android:text="基本设置"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <View
                android:id="@+id/view2"
                android:layout_width="5dp"
                android:layout_height="match_parent"
                android:visibility="invisible"
                android:background="@color/colorBlue"></View>
            <TextView
                android:id="@+id/tv_print"
                style="@style/TextView_Setting"
                android:text="打印机设置"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <View
                android:id="@+id/view3"
                android:layout_width="5dp"
                android:layout_height="match_parent"
                android:visibility="invisible"
                android:background="@color/colorBlue"></View>
            <TextView
                android:id="@+id/tv_outtime"
                style="@style/TextView_Setting"
                android:text="超时颜色"/>
        </LinearLayout>
    </LinearLayout>
    <View
        android:layout_width="0.5dp"
        android:layout_height="match_parent"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:background="@color/gray"></View>
    <FrameLayout
        android:id="@+id/frame"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="4"
        android:layout_toRightOf="@+id/ll_left"></FrameLayout>
</LinearLayout>
